<h1>Enter new contact information</h1>
<div class="new-contact row">
  <%= form_for @contact, html: {class: 'form-group'} do |f| -%>
    <div class="form-group">
    <label>First Name:</label> 
    <%= f.text_field :firstname, class: 'form-control col-sm-10' %> 
    </div>
    <div class="form-group">
    <label>Last Name:</label>
    <%= f.text_field :lastname, class: 'form-control col-sm-10' %> 
    </div>
    <div class="form-group">
    <label>Email:</label>
    <%= f.text_field :email, class: 'form-control col-sm-10' %> 
    </div>
    <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %> 
    </div>
  <% end -%>
</div>

<h1>Display All Contacts information</h1>
<div class="contacts container">

  <table class="table table-striped table-bordered">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>

    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.firstname %></td>
        <td><%= contact.lastname %></td>
        <td><%= contact.email %></td>
      </tr>
    <% end %>
  </table>
  <%#= will_paginate(@contact)%>
</div>

